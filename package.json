    "@nestjs/testing": "11.1.3",
    "@types/glob": "8.1.0",
    "@types/jest": "30.0.0",
    "@types/lodash": "4.17.18",
    "@types/nodemailer": "6.4.17",
    "@types/pug": "2.0.10",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "husky": "9.1.7",
    "jest": "30.0.2",
